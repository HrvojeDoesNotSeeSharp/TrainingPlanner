@model TrainingPlanner.VjezbePopis

@{
    Layout = "~/Views/_LayoutWithCSS.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DodajNovuVjezbu</title>
</head>
<body>
    
    @using (Html.BeginForm("DodajNovuVjezbu", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Nova Vjezba</legend>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.VjezbeSlike)
            </div>
            <div class="editor-field">
                <div>Dodaj sliku: <input type="file" name ="slike" value="" multiple="multiple"/></div>
            </div>
        
            <div class="editor-label">
                @Html.LabelFor(model => model.ImeVjezbe)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ImeVjezbe)
                @Html.ValidationMessageFor(model => model.ImeVjezbe)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Info)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Info)
                @Html.ValidationMessageFor(model => model.Info)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Slika)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Slika)
                @Html.ValidationMessageFor(model => model.Slika)
            </div>
    
            <p>
                <input type="submit" value="Dodaj vjezbu" />
            </p>
        </fieldset>
    }
    
    <div>
        @Html.ActionLink("Natrag na listu Vjezbi", "VjezbePopis")
    </div>
</body>
</html>
