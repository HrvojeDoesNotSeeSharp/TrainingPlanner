@model TrainingPlanner.VjezbePopis

@{
    Layout = "~/Views/_LayoutWithCSS.cshtml";
}
    
@using (Html.BeginForm("DodajNovuVjezbu", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    
    <div id="inputArea">
        <p class="bigFont marginHeadline">Nova vježba</p>
         
        <div>
            <div class="marginInputBottom">@Html.Label("Naziv", new { @class="smallFont" })</div>
            @Html.EditorFor(model => model.ImeVjezbe)
            @Html.ValidationMessageFor(model => model.ImeVjezbe)
        </div>
        
        <div class="marginText">
            <div class="marginInputBottom">@Html.Label("Info", new { @class="smallFont marginInputBottom" })</div>
            @Html.TextAreaFor(model => model.Info, new {rows = "10", cols = "40"})
            @Html.ValidationMessageFor(model => model.Info)
        </div>
        
        <div class="marginText">
            @Html.Label("Dodaj sliku", new { @class="smallFont" })
            <div>
                <input type="file" name ="slike" value="" multiple="multiple" class="marginInputTop"/>
            </div>
        </div>
        
        <div class="marginHeadlineTop marginTextBottom">
            <input type="submit" value="Dodaj vježbu" class="button_example"/>
        </div>

        @Html.ActionLink("Lista vježbi", "VjezbePopis", null, new { @class = "marginHeadlineTop marginTextBottom button_example" })
    </div>
}
