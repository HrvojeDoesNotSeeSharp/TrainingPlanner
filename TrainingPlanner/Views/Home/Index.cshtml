@using TrainingPlanner
@model List<Clan>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Početna stranica </title>
        <meta charset="utf-8">
        <link href="@Url.Content("~/Content/form.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Grid.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Vanjski.css")" rel="stylesheet" type="text/css" />
        <script type="javascript" src="@Url.Content("~/scripts/myScripts.js?" + DateTime.Now.ToString("ddMMHHmmss"))"></script>
    </head>
<body>

    <section>
        <h2 class="bigFont marginHeadline">Trening planer</h2>
    </section>

    <div class="container_12">
        <div class="grid_8">
            <div id="inputAreaTableHome">
                <div class="bigFont marginHeadline">Popis članova</div>
                <table class="responstable">
                    @if (Model.Count > 0)
                    {
                        foreach (Clan c in Model)
                        {
                            <tr class="smallFont">
                                <td>@c.Ime&nbsp;@c.Prezime</td>
                                <td>@c.GodineStarosti &nbsp; godine</td>
                                <td>@Html.ActionLink("Izmjeni", "IzmijeniClana", "Home", new { id = c.ClanId }, new { @class = "button_example_small" })</td>
                                <td>@Html.ActionLink("Detalji", "DetaljiClana", "Home", new { id = c.ClanId }, new { @class = "button_example_small" })</td>
                                <td>@Html.ActionLink("Test", "Test", "Home", new { id = c.ClanId }, new { @class = "button_example_small" })</td>
                                <td>@Html.ActionLink("Trening", "TreningPopis", "Home", new { id = c.ClanId }, new { @class = "button_example_small" })</td>
                                <td>@Html.ActionLink("Izbriši", "IzbrisiClana", "Home", new { id = c.ClanId }, new { @class = "button_example_small" })</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="smallFont">Nema članova</td>
                        </tr>
                    }
                </table>

                @Html.ActionLink("Dodaj člana", "DodajClana", "Home", null, new { @class = "marginHeadlineTop marginTextBottom button_example" })
            </div>
        </div>
        <div class="grid_4">
            <h3>Vježbe za trening</h3>
            <hr />
            <p>@Html.ActionLink("Pregled Vjezbi Zagrijavanja", "ZagrijavanjePopis", "Home", null, new { @class = "buttonlinkzagrijavanje" })</p>
            <p>@Html.ActionLink("Pregled Vjezbi Treninga", "VjezbePopis", "Home", null, new { @class = "buttonlinkvjezba" })</p>
            <p>@Html.ActionLink("Pregled Vjezbi Istezanja", "IstezanjePopis", "Home", null, new { @class = "buttonlinkistezanje" })</p>
        </div>
    </div>

</body>
</html>