@model TrainingPlanner.IstezanjePopis

@{
    Layout = "~/Views/_LayoutWithCSS.cshtml";
}

<div id="inputArea" style="float: left;">
    <p class="bigFont marginHeadline">Detalji istezanja</p> 
            
    @Html.HiddenFor(model => model.IstezanjeId)

    <div>
        <div class="marginInputBottom">@Html.LabelFor(model => model.Naziv, new { @class="smallFont" })</div>
        @Html.DisplayFor(model => model.Naziv)
    </div>
    
    <div class="marginText">
        <div class="marginInputBottom">@Html.LabelFor(model => model.Info, new { @class="smallFont marginInputBottom" })</div>
        @Html.DisplayFor(model => model.Info)
    </div> 
        
    <div class="marginHeadlineTop marginTextBottom button_example">
        @Html.ActionLink("Natrag na popis istezanja", "IstezanjePopis")
    </div>
</div>
    
@if (Model.IstezanjeSlike.Count > 0)
{
    <div id="inputAreaImages" style="float: left;">
        <p class="bigFont marginHeadline">Slike</p> 
        @foreach (var item in Model.IstezanjeSlike)
        {
            <div style="float: left; display: block; clear:right;" class="marginHeadline">
                <div><img class="marginLeft" width="250" height="250" src ="@Url.Content(String.Format("~/Content/IstezanjeSlike/{0}", item.IstezanjeSlikaIme))" /></div>
            </div>    
        }
    </div>
}
