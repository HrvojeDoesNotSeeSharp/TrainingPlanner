@model TrainingPlanner.Vjezba

@{
    Layout = "~/Views/_LayoutWithCSS.cshtml";
}

<div id="inputArea" style="float: left;">
    <p class="bigFont marginHeadline">Detalji vježbe</p>
    @Html.HiddenFor(model => model.VjezbaId)
    <div>
        <div class="marginInputBottom marginText">@Html.Label("Naziv", new { @class = "smallFont" })</div>
        @Html.DisplayFor(model => model.ImeVjezbe)
    </div>
    <div>
        <div class="marginInputBottom marginText">@Html.Label("Broj ponavljanja", new { @class = "smallFont" })</div>
        @Html.DisplayFor(model => model.BrojPonavljanja)
    </div>
    <div>
        <div class="marginInputBottom marginText">@Html.Label("Broj serija", new { @class = "smallFont" })</div>
        @Html.DisplayFor(model => model.BrojSerija)
    </div>
    <div>
        <div class="marginInputBottom marginText">@Html.Label("Težina", new { @class = "smallFont" })</div>
        @Html.DisplayFor(model => model.Kilogrami)
    </div>
    <div>
        <div class="marginInputBottom marginText">@Html.Label("Odmor", new { @class = "smallFont" })</div>
        @Html.DisplayFor(model => model.Odmor)
    </div>

    <div class="marginText">
        <div class="marginInputBottom">@Html.Label("Info", new { @class = "smallFont marginInputBottom" })</div>
        @if (Model.Info == null)
        {
            <text>--</text>
        }
        else
        {
            @Html.DisplayFor(model => model.Info)
        }
    </div>

    @if ((int)ViewData["izmijeni"] == 0)
    {
        @Html.ActionLink("Natrag na trening", "DodajTrening", "Home", new { id = Convert.ToInt32(ViewData["id1"]), DodajVjezbu = 1 }, new { @class = "marginHeadlineTop marginTextBottom button_example" })
    }
    else
    {
        @Html.ActionLink("Natrag na trening", "IzmijeniTrening", "Home", new { id = Convert.ToInt32(ViewData["id1"]) }, new { @class = "marginHeadlineTop marginTextBottom button_example" })
    }
</div>
