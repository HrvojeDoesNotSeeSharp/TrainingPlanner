@using TrainingPlanner
@model Clan

@{
    Layout = "~/Views/_LayoutWithCSS.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Izmijeni Clana</title>
</head>
<body>
    <div>
        @using(Html.BeginForm("IzmijeniClana", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(x =>x.ClanId)            
            <table>
            <tr>
                <td>
                    Ime:
                </td>
                <td>
                   @Html.TextAreaFor(x=>x.Ime)
                </td>
            </tr>
            <tr>
                <td>
                    Prezime:
                </td>
                <td>
                   @Html.TextAreaFor(x=>x.Prezime)
                </td>
            </tr>
            <tr>
                <td>
                    Visina:
                </td>
                <td>
                   @Html.TextAreaFor(x=>x.Visina)
                </td>
            </tr>
            <tr>
                <td>
                    Tezina:
                </td>
                <td>
                   @Html.TextAreaFor(x=>x.Tezina)
                </td>
            </tr>
            <tr>
                <td>
                    Godina Rodenja:
                </td>
                <td>
                   @Html.TextBoxFor(x=>x.GodinaRodenja, "{0:d}", new { @class = "dateInput", @placeholder = "Please enter date" })
                </td>
            </tr>
            <tr>
                <td>
                    Amneza:
                </td>
                <td>
                   @Html.TextAreaFor(x=>x.Amneza, new {rows = "10", cols = "40" })
                </td>
            </tr>
                <tr>
                <td>
                    Napomena:
                </td>
                <td>
                   @Html.TextAreaFor(x => x.Napomena, new {rows = "10", cols = "40" })
                </td>
            </tr>
               </table>
            <input type ="submit" name ="Spremi" value="Spremi Clana" />
        }
    </div>
    <div>
    @Html.ActionLink("Natrag na Popis Clanova", "Index")
</div>
</body>
</html>
