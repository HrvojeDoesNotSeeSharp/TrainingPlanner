@using TrainingPlanner.Models
@model TrainingPlanner.Models.AntropometrijaList

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="sidebar"></div>
<div id="content">
    <h2 class="green">Antropometrija - @Model.Clan.Ime @Model.Clan.Prezime</h2>
    <p>
        <table class="responstable">
            @if (Model.AntropometrijaLista == null)
            {
                <tr>
                    <td class="smallFont">Trenutno nema antropometrije.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.AntropometrijaLista)
                {
                    <tr class="smallFont">
                        <td class="green">@item.Ime</td>
                        <td>@Html.ActionLink("Izmjeni", "IzmijeniAntropometriju", "Home", new { id = item.AntropometrijaId }, new { @class = "button_example_small" })</td>
                        <td>@Html.ActionLink("Detalji", "DetaljiAntropometrije", "Home", new { id = item.AntropometrijaId }, new { @class = "button_example_small" })</td>
                        <td>@Html.ActionLink("Izbriši", "IzbrisiAntropometriju", "Home", new { id = item.AntropometrijaId }, new { @class = "button_example_small", onclick = "return confirm('Jeste li sigurni da zelite izbrisati antropometriju?');" })</td>
                    </tr>
                }
            }
        </table>

        @Html.ActionLink("Dodaj antropometriju", "DodajAntropometriju", "Home", new { id = Model.Clan.ClanId }, new { @class = "marginHeadlineTop marginTextBottom button_example" })
        @Html.ActionLink("Popis članova", "Index", "Home", null, new { @class = "marginHeadlineTop marginTextBottom button_example" })
    </p>
</div>
