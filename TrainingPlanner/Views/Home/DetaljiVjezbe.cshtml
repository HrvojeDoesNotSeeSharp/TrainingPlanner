@model TrainingPlanner.VjezbePopis

@{
    Layout = "~/Views/_LayoutWithCSS.cshtml";
}

<div id="inputArea" style="float: left;">
    <p class="bigFont marginHeadline">Detalji vježbe</p> 

    <div>
        <div class="marginInputBottom">@Html.Label("Naziv", new { @class="smallFont" })</div>
        @Html.DisplayFor(model => model.ImeVjezbe)
    </div>
    
    <div class="marginText">
        <div class="marginInputBottom">@Html.Label("Info", new { @class="smallFont marginInputBottom" })</div>
        @if(Model.Info == null)
        {
            <text>--</text>
        }
        else
        {
            @Html.DisplayFor(model => model.Info)
        }
    </div> 
    
    @if (ViewData["trening"] != null)
    {
        @Html.ActionLink("Natrag na trening", "DodajTrening", "Home", new { id = (int)ViewData["treningId"], DodajVjezbu = 1 }, new { @class = "marginHeadlineTop marginTextBottom button_example" })
    }
    @if (ViewData["izmijeni"] != null)
    {
        @Html.ActionLink("Natrag na trening", "IzmijeniTrening", "Home", new { id = (int)ViewData["treningId"] }, new { @class = "marginHeadlineTop marginTextBottom button_example" })
    }
    @if (ViewData["trening"] == null && ViewData["izmijeni"] == null)
    {
        @Html.ActionLink("Popis vježbi", "VjezbePopis", null, new { @class = "marginHeadlineTop marginTextBottom button_example" })
    }
</div>
    
@if (Model.VjezbeSlike.Count > 0)
{
    <div id="inputAreaImages" style="float: left;">
        <p class="bigFont marginHeadline">Slike</p> 
        @foreach (var item in Model.VjezbeSlike)
        {
            <div style="float: left; display: block; clear:right;" class="marginHeadline">
                <div><img class="marginLeft" width="250" height="250" src ="@Url.Content(String.Format("~/Content/VjezbeSlike/{0}", item.VjezbeSlikaIme))" /></div>
            </div>    
        }
    </div>
}